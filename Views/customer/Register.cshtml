@model ECommerce.Models.customer

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register</h1>
<hr />
<div class="row shadow-lg p-3 mb-5 bg-white rounded">
    <div class="col-md-12">
        <form  method="post" enctype="multipart/form-data">

            <div class="form-group mt-5">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-4">
                <input asp-for="Confirm_Password" class="form-control" type="password" placeholder="Confirm Password"/>
                <span asp-validation-for="Confirm_Password" class="text-danger"></span>
            </div>

              <div class="form-group mt-4">
                <input asp-for="Phone" class="form-control" placeholder="Phone"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input asp-for="Address" class="form-control" placeholder="Address"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

              <div class="form-group">
                <label >Image</label>
                <input asp-for="Img" class="form-control" type="file" name="photo"/>
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>

            <br/>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            <p class="small fw-bold mt-2 pt-1 mb-0">Have an account?
                <a asp-action="Login" asp-controller="customer" class="link-danger">Login</a>
            </p>
        </form>
    </div>
</div>
