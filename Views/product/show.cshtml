@model List<ECommerce.Models.Product>


@{
    ViewData["Title"] = "show";
    Layout = "~/Views/Shared/_mainLayout.cshtml";

}

<h1 style="text-align:center;">Products</h1>

<hr/>
@if (ViewBag.isAdmin == true)
{
    <a asp-action="create" asp-controller="product" class="btn btn-info">Add Product</a>
    <hr />

}

<section style="background-color: #eee;">
    <div class="text-center container py-5">
    <div class="row">

@foreach(var i in Model){
         <div class="col-lg-4 col-md-4 mb-4" >
            <div class="col-lg-12 mb-4">
                <div class="card">
                    <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
                    <a asp-action="detail" asp-controller="product" asp-route-id="@i.Id">
                        <img src="~/attaches/@i.Img" class="w-100 h-25" />
                     </a>
                        <a href="#!">
                        <div class="mask">
                        <div class="d-flex justify-content-start align-items-end h-100">
                            <h5><span class="badge bg-primary ms-2">New</span></h5>
                        </div>
                        </div>
                        <div class="hover-overlay">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                        </div>
                    </a>
                    </div>
                    <div class="card-body">
                    <a href="" class="text-reset">
                        <h5 class="card-title mb-3">@i.Name</h5>
                    </a>
                    <a href="" class="text-reset">
                        <p>@i.Category</p>
                    </a>
                    <h6 class="mb-3">$@i.Price</h6>
                    <div>
                        <a class="btn btn-info " asp-action="add" asp-controller="cart" asp-route-productId="@i.Id" style="margin-right:20px;">Add to Cart</a>
                        <a class="btn btn-dark" asp-action="OrderDetail" asp-controller="Order" asp-route-Id="@i.Id" >Buy Now!</a>
                    </div>
                        <div class="mt-3 text-white">
                            @if(ViewBag.isAdmin == true){
                                <a class="btn btn-warning text-black" asp-action="edit" asp-controller="product" asp-route-productId="@i.Id"  style="margin-right:20px;">Edit</a>
                                <a class="btn btn-danger text-black" asp-action="delete" asp-controller="product" asp-route-productId="@i.Id"  style="margin-right:20px;">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            </div>

}
    </div>
    </div>

</section>






