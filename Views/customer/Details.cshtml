@model ECommerce.Models.customer

@{
    Layout = "~/Views/Shared/_mainLayout.cshtml";

    ViewData["Title"] = "Details";
}

<h1 style="text-align:center">Profile</h1>
<hr />

<div class="container">
    <div class="main-body">

     

          <div class="row gutters-sm" style="width:1000px">
            <div class="col-md-4 mb-3" style="width:300px">
              <div class="card" >
                <div class="card-body" >
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="/attaches/@Model.Img" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>@Model.FName @Model.LName</h4>
                      <p class="text-secondary mb-1">@Model.Address</p>
                      <p class="text-muted font-size-sm">@Model.Phone</p>
                      @*
                      <button class="btn btn-primary">Follow</button>
                      <button class="btn btn-outline-primary">Message</button>*@
                    </div>
                  </div>
                </div>
              </div>
             
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.FName  @Model.LName
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.Email
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.Phone    
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                                @Model.Address    
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
@*                          @Html.ActionLink("Edit","Edit", "customer", new {id = Model.Id} ,new {@class="btn btn-info"})
*@                          <a asp-action="edit" asp-controller="customer" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
                    </div>
                  </div>
                </div>
              </div>
              </div>
            </div>
          </div>

        </div>
